    	if( $node->type == 'story'){

    		$list = array();
    		$show = false;
    		foreach ($node->field_article_releted_gallerys as $k => $gallery){
				$galleryObj = node_load($gallery['nid']);
				$photographer = $galleryObj->field_gallery_photograper;
