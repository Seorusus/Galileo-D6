function _galilole_url_theme_item( $item ){

	global $theme ;
	$preset = 'showcase_thumb';

	if (!strcmp($theme,'galilm')) {
		$preset = 'image_thumbnail';
	}

	//$default_filepath = 'sites/default/files/world_of_basketball_by_rjonesdesign_8.jpg';

	$length = 155;

	$path = $item->file->filepath ? $item->file->filepath:false;
	if($path){
	$img = theme_imagecache($preset,$path , $item->title, $item->title);
	$img_with_link = l($img , "node/$item->nid" , array('html' => true));
	}else{
		$img_with_link = '';
	}
	$out = "";

	$out .= "<a href='node/$item->nid'><div class='sportListImage'>";
	$out .= $img;
	$out .= "</div>";
	$out .= "<div class='sportListTeaser'>";

	$body = strip_tags($item->field_article_teaser_value);
	$body = mb_substr($body,0,$length,'utf-8') . (mb_strlen($body,'utf-8')>$length ? "..." :" ") ;
//	$out .= "<div class='title'>" . l($item->title , "node/$item->nid" ) .  "</div>";
	$out .= "<div class='title'>" . $item->title . "</div>";
//	$out .= "<div class='title'>" . variable_get('theme_default','none') .  "</div>";
	if (variable_get('theme_default','none') == 'galilm') {$out .= "<div class='views-field-view-node'>" . $item->title .  "</div>"; }
	$out .= "<div class='body'>" . $body . "</div></a>";
	
	
	//different style for advertisement 
	if ($item->field_main_sport_ad_flag_value) {

	$out .= "<div class='info-bkg'>";
    $out .= "<div class='addnote'> (תוכן שיווקי)</div>";

	$out .=  $item->field_author_value;

	$out .= "<span class='date-display-single'>". format_date(strtotime($item->field_gallry_date_value)+(3600*3), 'medium', '', NULL, 'he') . "</span>";

	$out .= "</div>";

	//$out .= "<div>$item->nid</div>";
	//$out .= "<div>$item->field_article_image_fid</div>";
	$out .= "</div>";

	$out="<div class='views-row-bkg'>$out</div>";	

	}
	else
	{
	$out .= "<div class='info'>";
//	$out .= "&nbsp;&nbsp;"."מאת: " ;
	$out .=  $item->field_author_value;

//	format_date($item->field_gallry_date_value, 'medium', '', NULL, 'he') ;
//	$out .= "<span class='date-display-single'>".date('d.m.Y'  , strtotime($item->field_gallry_date_value)+(3600*3)) . "</span>";
	$out .= "<span class='date-display-single'>". format_date(strtotime($item->field_gallry_date_value)+(3600*3), 'medium', '', NULL, 'he') . "</span>";
	

	$out .= "</div>";

	//$out .= "<div>$item->nid</div>";
	//$out .= "<div>$item->field_article_image_fid</div>";
	$out .= "</div>";

	$out = "<div class='views-row'>$out</div>";

	}
	return $out;

}


