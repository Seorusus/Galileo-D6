	    		$out = "<div id='stroy-noderefernce'><b>גלריית תמונות:</b> <br>" . implode("<br>" , $list ) . "</div>";

	    		$node->content['field_article_releted_gallerys']= array('#value' => $out , '#weight' => 2);
			}
    	}
      break;

  }

}



