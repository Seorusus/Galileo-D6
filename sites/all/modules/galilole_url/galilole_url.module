function _galilole_url_theme_footer ( $delta){
	$out = "";
	$out .= "<div class='view_footer'>";
	
	switch ($delta) {
			case 'basketball':
			$out .= "<a href='ענפי-ספורט/ספורט/כדורסל' style='text-align: center;'>לכל חדשות הכדורסל</a>";
			break;
			case 'football':
			$out .= "<a  href='ענפי-ספורט/ספורט/כדורגל' style='text-align: center;'>לכל חדשות הכדורגל</a>";
			break;
			
			case 'other-sports':
			$out .= "<a href='taxonomy/term/1097' style='text-align: center;'>לכל חדשות ענפי הספורט השונים</a>";

