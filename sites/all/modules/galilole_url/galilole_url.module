  		$where =  "old_url like '%s'" ;
	  	$args = array( '%%' .  'advice_id=' . $_GET['advice_id'] . '%%' );

	  	$rid_query = db_query("SELECT new_url FROM {url_redirect} WHERE $where  ORDER BY id DESC" ,  $args );

